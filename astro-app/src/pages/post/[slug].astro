---
import type { InferGetStaticParamsType } from "astro";
import { PortableText } from "astro-portabletext";
import Layout from "../../layouts/Layout.astro";
import dayjs from "dayjs";
import { urlFor } from "../../utils/image";
import { getPost, getPosts } from "../../utils/sanity";
import { type Image } from "sanity";

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getPosts();
  return posts.map((post) => ({
    params: { slug: post.slug!.current },
  }));
}

type Params = InferGetStaticParamsType<typeof getStaticPaths>;
const { slug } = Astro.params as Params;

if (!slug) {
  return Astro.redirect("/404");
}

const post = await getPost(slug);
// Redirect to 404 if post is not found
if (!post) {
  return new Response(null, { status: 404 });
}

// TODO: Add meta description, Open Graph tags, and Schema.org structured data for SEO
// TODO: Consider extracting repeated magic numbers (750, 380, 200) to CSS custom properties
---

<Layout title={post.title!}>
  <section class="post">
    {
      post.mainImage ? (
        <img
          class="post__cover"
          src={urlFor(post.mainImage as Image)
            .width(750)
            .height(380)
            .url()}
          alt={post.mainImage?.alt || post.title || "Cover image"}
          loading="lazy"
          width="750"
          height="380"
        />
      ) : (
        <div class="post__cover--none" />
      )
    }
    <div class="post__container">
      <h1 class="post__title">{post.title}</h1>
      <!-- TODO: Add estimated reading time calculation -->
      <!-- TODO: Add social sharing buttons -->
      {
        (post.categories?.length || post.tags?.length) && (
          <div class="post__meta-tags">
            {post.categories?.map((category) => (
              <span class="post__category-tag">{category}</span>
            ))}
            {post.tags?.map((tag) => (
              <span class="post__tag">{tag}</span>
            ))}
          </div>
        )
      }
      <p class="post__date">
        {dayjs(post.publishedAt).format("MMMM D, YYYY")}
      </p>
      <div class="post__content">
        <PortableText value={post.body!} />
      </div>
      <!-- TODO: Add prev/next post navigation -->
    </div>
  </section>

  <style>
    .post {
      width: 100%;
      margin: var(--space-1) 0 var(--space-4);

      & .post__cover,
      & .post__cover--none {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      & .post__cover--none {
        background: var(--text-primary);
      }

      & .post__container {
        padding: 0 var(--space-3);
      }

      & .post__content {
        font-family: var(--font-family-serif);
        font-weight: 400;
        font-size: var(--font-size-4);
        line-height: var(--line-height-5);
        letter-spacing: -0.02em;
        margin-top: var(--space-6);

        /* Targeting tags in PortableText */
        & blockquote {
          border-left: 5px solid var(--text-primary);
          padding-left: var(--space-3);
          margin-left: var(--space-4);
        }

        & a {
          color: var(--primary-color);
          text-decoration: none;
        }
      }

      & .post__title {
        font-family: var(--font-family-sans);
        font-size: var(--font-size-7);
        line-height: var(--line-height-6);
        margin: var(--space-4) 0;
        font-weight: 800;
      }

      & .post__excerpt {
        font-family: var(--font-family-serif);
        font-size: var(--font-size-5);
        line-height: var(--line-height-4);
        margin-top: 0;
        font-weight: 400;
      }

      & .post__date {
        font-family: var(--font-family-sans);
        font-weight: 600;
        font-size: var(--font-size-1);
        line-height: var(--line-height-1);
        margin-top: var(--space-4);
      }

      & .post__meta-tags {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-2);
        margin: var(--space-3) 0;
      }

      & .post__category-tag,
      & .post__tag {
        display: inline-block;
        padding: var(--space-1) var(--space-2);
        font-family: var(--font-family-sans);
        font-size: var(--font-size-1);
        font-weight: 600;
        border-radius: 4px; /* TODO: Extract magic number to CSS custom property */
        text-decoration: none;
        transition: background-color 0.2s ease;
        background-color: var(--surface-color);
        color: var(--text-primary);
        /* TODO: Add focus states for better accessibility */
      }
    }

    @media (min-width: 800px) {
      .post {
        & .post__cover,
        & .post__cover--none {
          width: 750px;
          height: 380px;
        }

        & .post__title {
          font-size: var(--font-size-10);
          line-height: var(--line-height-10);
          margin: var(--space-6) 0 0;
          letter-spacing: -0.025em;
        }

        & .post__excerpt {
          font-size: var(--font-size-5);
          line-height: var(--line-height-5);
          margin-top: var(--space-3);
          margin-bottom: var(--space-3);
        }

        & .post__date {
          font-size: var(--font-size-3);
          line-height: var(--line-height-2);
          margin-top: var(--space-0);
        }

        & .post__content {
          margin-top: var(--space-7);
        }

        & .post__meta-tags {
          margin: var(--space-4) 0;
        }

        & .post__category-tag,
        & .post__tag {
          font-size: var(--font-size-2);
          padding: var(--space-2) var(--space-3);
        }
      }
    }
  </style>
</Layout>
