---
import { PortableText } from "astro-portabletext";
import Block from "../../components/Block.astro";
import Layout from "../../layouts/Layout.astro";
import dayjs from "dayjs";
import { urlFor } from "../../utils/image";
import { getPost } from "../../utils/sanity";
import { type Image } from "sanity";

const { slug } = Astro.params;
if (!slug) {
  return Astro.redirect("/404");
}

const post = await getPost(slug);
if (!post) {
  return Astro.redirect("/404");
}

// TODO: Open Graph tags, and Schema.org structured data for SEO
// TODO: Consider extracting repeated magic numbers (750, 380, 200) to CSS custom properties
---

<Layout
  type="Article"
  title={post.title!}
  pubDate={post.publishedAt}
  updatedDate={post._updatedAt}
>
  <section class="post">
    {
      post.mainImage ? (
        <img
          class="post__cover"
          src={urlFor(post.mainImage as Image)
            .width(1200)
            .height(600)
            .url()}
          alt={post.mainImage?.alt || post.title || "Cover image"}
          loading="lazy"
          width="1200"
          height="600"
        />
      ) : (
        <div class="post__cover--none" />
      )
    }
    <div class="post__container">
      <h1 class="post__title">{post.title}</h1>
      <!-- TODO: Add estimated reading time calculation -->
      <!-- TODO: Add social sharing buttons -->
      {
        (post.categories?.length || post.tags?.length) && (
          <div class="post__meta-tags">
            {post.categories?.map((category) => (
              <span class="post__category-tag">{category}</span>
            ))}
            {post.tags?.map((tag) => (
              <span class="post__tag">{tag}</span>
            ))}
          </div>
        )
      }
      <p class="post__date">
        {dayjs(post.publishedAt).format("MMMM D, YYYY")}
      </p>
      <div class="post__content">
        <PortableText value={post.body!} components={{ block: Block }} />
      </div>
      <!-- TODO: Add prev/next post navigation -->
    </div>
  </section>

  <style>
    .post {
      width: 100%;
      margin: var(--space-7) auto var(--space-4);
      padding: var(--space-2) var(--space-3);
      max-width: 1600px;
      background-color: var(--article-background-color);

      & .post__cover,
      & .post__cover--none {
        width: 100%;
        border: 1px solid var(--article-image-border-color);
        object-fit: cover;
      }

      & .post__cover--none {
        background: var(--article-title-text-color);
      }

      & .post__container {
        padding: 0;
      }

      & .post__content {
        font-family: var(--font-family-serif);
        font-weight: 400;
        font-size: var(--font-size-4);
        line-height: var(--line-height-5);
        letter-spacing: -0.02em;
        margin-top: var(--space-6);
        color: var(--article-body-text-color);

        /* Targeting tags in PortableText */
        & blockquote {
          border-left: 5px solid var(--article-body-text-color);
          padding-left: var(--space-3);
          margin-left: var(--space-4);
        }

        & a {
          color: var(--text-hover-color);
          text-decoration: none;
        }
      }

      & .post__title {
        font-family: var(--font-family-sans);
        font-size: var(--font-size-7);
        line-height: var(--line-height-6);
        margin: var(--space-4) 0;
        font-weight: 800;
        color: var(--article-title-text-color);
      }

      & .post__date {
        font-family: var(--font-family-sans);
        font-weight: 600;
        font-size: var(--font-size-1);
        line-height: var(--line-height-1);
        margin-top: var(--space-4);
        color: var(--article-subtitle-text-color);
      }

      & .post__meta-tags {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-2);
        margin: var(--space-3) 0;
      }

      & .post__category-tag,
      & .post__tag {
        display: inline-block;
        padding: var(--space-1) var(--space-2);
        font-family: var(--font-family-sans);
        font-size: var(--font-size-1);
        font-weight: 600;
        border-radius: 4px;
        text-decoration: none;
        transition: color 0.2s ease;
        background-color: var(--article-tag-color);
        color: var(--article-tag-text-color);

        &:hover {
          color: var(--article-tag-text-hover-color);
        }
      }
    }

    @media (min-width: 575px) {
      .post {
        padding: var(--space-2) var(--space-6);

        & .post__cover,
        & .post__cover--none {
          max-height: 375px;
        }

        & .post__title {
          font-size: var(--font-size-8);
          line-height: var(--line-height-8);
          margin: var(--space-6) 0 0;
          letter-spacing: -0.025em;
        }

        & .post__date {
          font-size: var(--font-size-3);
          line-height: var(--line-height-2);
          margin-top: var(--space-0);
        }

        & .post__meta-tags {
          margin: var(--space-4) 0;
        }

        & .post__category-tag,
        & .post__tag {
          font-size: var(--font-size-2);
          padding: var(--space-2) var(--space-3);
        }
      }
    }
  </style>
</Layout>
