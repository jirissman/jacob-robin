---
import Layout from "../layouts/Layout.astro";
import { getPosts } from "../utils/sanity";

const posts = await getPosts();
---

<Layout title="Blog | Creative Writer & Storyteller">
  <section class="blog">
    <div class="blog__header">
      <h1 class="blog__title">Blog</h1>
      <p class="blog__description">
        Thoughts, insights, and reflections on writing, creativity, and
        storytelling.
      </p>
    </div>

    {
      posts.length > 0 ? (
        <div class="blog__posts">
          {posts.map((post) => (
            <article class="blog__post">
              <h2 class="blog__post-title">
                <a href={`/post/${post.slug.current}`}>{post.title}</a>
              </h2>
              {post.excerpt && <p class="blog__post-excerpt">{post.excerpt}</p>}
              <a href={`/post/${post.slug.current}`} class="blog__post-link">
                Read more â†’
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="blog__empty">
          <p>Blog posts coming soon. Check back for updates!</p>
        </div>
      )
    }
  </section>
</Layout>

<style>
  .blog {
    padding: var(--space-8) var(--space-3) var(--space-6);
    max-width: var(--max-width-1);
    margin: 0 auto;
  }

  .blog__header {
    text-align: center;
    margin-bottom: var(--space-7);
  }

  .blog__title {
    font-size: var(--font-size-7);
    font-weight: 700;
    margin: 0 0 var(--space-3);
    color: var(--black);
    font-family: var(--font-family-serif);
  }

  .blog__description {
    font-size: var(--font-size-3);
    color: var(--gray-600);
    margin: 0;
    font-family: var(--font-family-serif);
  }

  .blog__posts {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .blog__post {
    padding: var(--space-5);
    border-bottom: 1px solid var(--gray-200);
  }

  .blog__post:last-child {
    border-bottom: none;
  }

  .blog__post-title {
    font-size: var(--font-size-5);
    font-weight: 600;
    margin: 0 0 var(--space-3);
    font-family: var(--font-family-serif);
  }

  .blog__post-title a {
    text-decoration: none;
    color: var(--black);
    transition: color 0.2s ease;
  }

  .blog__post-title a:hover {
    color: var(--blue-600);
  }

  .blog__post-excerpt {
    font-size: var(--font-size-2);
    line-height: 1.6;
    color: var(--black);
    margin: 0 0 var(--space-3);
  }

  .blog__post-link {
    font-size: var(--font-size-2);
    color: var(--blue-600);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .blog__post-link:hover {
    color: var(--black);
  }

  .blog__empty {
    text-align: center;
    padding: var(--space-6);
    color: var(--gray-600);
    font-style: italic;
  }

  @media (max-width: 574px) {
    .blog {
      padding: var(--space-6) var(--space-3) var(--space-4);
    }

    .blog__title {
      font-size: var(--font-size-5);
    }

    .blog__post {
      padding: var(--space-3) 0;
    }
  }
</style>
