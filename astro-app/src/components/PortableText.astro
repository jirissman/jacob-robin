---
import { PortableText as PortableTextInternal } from "astro-portabletext";
import PortableTextImage from "./PortableTextImage.astro";
import Block from "./Block.astro";
import type { PortableTextComponents } from "astro-portabletext/types";

const { value, components: moreComponents = {} } = Astro.props;

const components: Partial<PortableTextComponents> = {
  block: Block,
  type: {
    image: PortableTextImage,
  },
  ...moreComponents,
};
---

<PortableTextInternal value={value} components={components} />
