---
// Header component
---

<header class="header">
  <div class="header__brand">
    <a href="/" class="brand__link">Jacob Robin</a>
  </div>
  <nav class="nav">
    <a class="nav__link nav__link--home" href="/">Home</a>
    <a class="nav__link" href="/about">About</a>
    <a class="nav__link" href="/portfolio">Portfolio</a>
    <a class="nav__link" href="/blog">Blog</a>
    <a class="nav__link" href="/contact">Contact</a>
  </nav>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-4) var(--space-1);
    border-bottom: 1px solid var(--gray-200);
    background: var(--white);
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    z-index: 10;

    & .header__brand {
      flex-shrink: 0;
    }

    & .brand__link {
      font-weight: 700;
      font-size: var(--font-size-3);
      text-decoration: none;
      color: var(--black);
      transition: color 0.2s ease;

      &:hover {
        color: var(--blue-600);
      }
    }

    & .nav {
      display: flex;
      gap: var(--space-4);
      align-items: center;
    }

    & .nav__link {
      font-weight: 500;
      font-size: var(--font-size-2);
      text-decoration: none;
      color: var(--black);
      transition: color 0.2s ease;

      &:hover {
        color: var(--blue-600);
      }

      &--home {
        font-weight: 700;
      }
    }
  }

  @media (min-width: 575px) {
    .header {
      position: fixed;
      border-bottom: 1px solid var(--gray-200);

      & .brand__link {
        font-size: var(--font-size-4);
      }

      & .nav__link {
        font-size: var(--font-size-3);
      }
    }
  }
</style>
