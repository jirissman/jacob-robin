---
// https://docs.astro.build/en/guides/view-transitions/
import { ClientRouter } from "astro:transitions";
import { Header, Footer, ThemeManager } from "../components";
import "../styles/global.css";
import {
  getDarkTheme,
  getLayoutSettings,
  getLightTheme,
  getTypography,
} from "../utils/sanity";
import {
  DEFAULT_COLORS,
  DEFAULT_TYPOGRAPHY,
  DEFAULT_LAYOUT,
} from "../../../shared/defaults";

interface Props {
  title: string;
}

const { title } = Astro.props;
const darkTheme = await getDarkTheme();
const lightTheme = await getLightTheme();
const typography = await getTypography();
const layout = await getLayoutSettings();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@500;700&family=Inter:wght@500;700;800&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ClientRouter />
    <ThemeManager defaultTheme="auto" />
  </head>
  <body>
    <div class="container">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style>
  .container {
    margin: 0 auto;
    width: 100%;
  }

  main {
    margin-top: 30px;
  }

  @media (min-width: 575px) {
    .container {
      width: 100%;
      padding: 0;
    }

    main {
      margin-top: 60px;
    }
  }
</style>

<style
  is:global
  define:vars={{
    // Light theme colors
    "color-primary-light":
      lightTheme?.primaryColor || DEFAULT_COLORS.light.primaryColor,
    "color-secondary-light":
      lightTheme?.secondaryColor || DEFAULT_COLORS.light.secondaryColor,
    "color-background-light":
      lightTheme?.backgroundColor || DEFAULT_COLORS.light.backgroundColor,
    "color-surface-light":
      lightTheme?.surfaceColor || DEFAULT_COLORS.light.surfaceColor,
    "color-text-light": lightTheme?.textColor || DEFAULT_COLORS.light.textColor,
    // Dark theme colors
    "color-primary-dark":
      darkTheme?.primaryColor || DEFAULT_COLORS.dark.primaryColor,
    "color-secondary-dark":
      darkTheme?.secondaryColor || DEFAULT_COLORS.dark.secondaryColor,
    "color-background-dark":
      darkTheme?.backgroundColor || DEFAULT_COLORS.dark.backgroundColor,
    "color-surface-dark":
      darkTheme?.surfaceColor || DEFAULT_COLORS.dark.surfaceColor,
    "color-text-dark": darkTheme?.textColor || DEFAULT_COLORS.dark.textColor,
    // Border colors
    "color-border-light":
      lightTheme?.borderColor || DEFAULT_COLORS.light.borderColor,
    "color-border-dark":
      darkTheme?.borderColor || DEFAULT_COLORS.dark.borderColor,
    // Typography variables
    "font-sans": typography?.sansSerifFont || DEFAULT_TYPOGRAPHY.sansSerifFont,
    "font-serif": typography?.serifFont || DEFAULT_TYPOGRAPHY.serifFont,
    "font-mono": typography?.monospaceFont || DEFAULT_TYPOGRAPHY.monospaceFont,
    "font-size-mobile":
      typography?.fontSize?.mobile || DEFAULT_TYPOGRAPHY.fontSize.mobile,
    "font-size-desktop":
      typography?.fontSize?.desktop || DEFAULT_TYPOGRAPHY.fontSize.desktop,
    "line-height": typography?.lineHeight || DEFAULT_TYPOGRAPHY.lineHeight,
    // Layout settings
    "max-width-custom":
      layout?.maxWidth == "custom"
        ? layout?.customMaxWidth || DEFAULT_LAYOUT.customMaxWidth
        : layout?.maxWidth || DEFAULT_LAYOUT.maxWidth,
  }}
>
  :root {
    --space-0: 0;
    --space-1: 4px;
    --space-2: 8px;
    --space-3: 12px;
    --space-4: 20px;
    --space-5: 32px;
    --space-6: 52px;
    --space-7: 84px;
    --space-8: 136px;
    --space-9: 220px;

    --font-family-sans: var(--font-sans), Inter;
    --font-family-serif: var(--font-serif), PT Serif;
    --font-family-mono: var(--font-mono), IBM Plex Mono;

    --font-size-0: 12px;
    --font-size-1: 14px;
    --font-size-2: 16px;
    --font-size-3: 18px;
    --font-size-4: 20px;
    --font-size-5: 24px;
    --font-size-6: 30px;
    --font-size-7: 36px;
    --font-size-8: 48px;
    --font-size-9: 60px;
    --font-size-10: 72px;

    --line-height-0: 16px;
    --line-height-1: 20px;
    --line-height-2: 24px;
    --line-height-3: 28px;
    --line-height-4: 28px;
    --line-height-5: 32px;
    --line-height-6: 36px;
    --line-height-7: 40px;
    --line-height-8: 48px;
    --line-height-9: 60px;
    --line-height-10: 72px;
    --line-height-11: 96px;
    --line-height-12: 128px;

    /* Static colors - don't change with theme */
    --blue-600: #1e61cd;
    --magenta-100: #f9d7eb;

    --max-width-0: 320px;
    --max-width-1: 768px;
  }

  html {
    background-color: var(--background-color);
    font-family: var(--font-family-sans), var(--font-family-serif), sans-serif;
    text-size-adjust: 100%;
  }

  :root[data-theme="light"] {
    --primary-color: var(--color-primary-light);
    --secondary-color: var(--color-secondary-light);
    --background-color: var(--color-background-light);
    --surface-color: var(--color-surface-light);
    --text-color: var(--color-text-light);
    --border-color: var(--color-border-light);

    color-scheme: light;
  }

  @media (prefers-color-scheme: dark), :root[data-theme="dark"] {
    :root {
      --primary-color: var(--color-primary-dark);
      --secondary-color: var(--color-secondary-dark);
      --background-color: var(--color-background-dark);
      --surface-color: var(--color-surface-dark);
      --text-color: var(--color-text-dark);
      --border-color: var(--color-border-dark);

      color-scheme: dark;
    }
  }

  body {
    margin: 0;
    background-color: var(--background-color);
    color: var(--text-color);
  }
</style>
