---
// https://docs.astro.build/en/guides/view-transitions/
import { ClientRouter } from "astro:transitions";
import { Header, Footer, ThemeManager } from "../components";
import {
  getDarkTheme,
  getLayoutSettings,
  getLightTheme,
  getTypography,
} from "../utils/sanity";

interface Props {
  title: string;
}

const { title } = Astro.props;
const darkTheme = await getDarkTheme();
const lightTheme = await getLightTheme();
const typography = await getTypography();
const layout = await getLayoutSettings();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@500;700&family=Inter:wght@500;700;800&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ClientRouter />
    <ThemeManager defaultTheme="auto" />
  </head>
  <body>
    <div class="container">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style>
  .container {
    margin: 0 auto;
    width: 100%;
  }

  main {
    margin-top: 30px;
  }

  @media (min-width: 575px) {
    .container {
      width: 100%;
      padding: 0;
    }

    main {
      margin-top: 60px;
    }
  }
</style>

<style is:global>
  :root {
    --space-0: 0;
    --space-1: 4px;
    --space-2: 8px;
    --space-3: 12px;
    --space-4: 20px;
    --space-5: 32px;
    --space-6: 52px;
    --space-7: 84px;
    --space-8: 136px;
    --space-9: 220px;

    --font-family-sans: Inter;
    --font-family-serif: PT Serif;
    --font-family-mono: IMB Plex Mono;

    --font-size-0: 12px;
    --font-size-1: 14px;
    --font-size-2: 16px;
    --font-size-3: 18px;
    --font-size-4: 20px;
    --font-size-5: 24px;
    --font-size-6: 30px;
    --font-size-7: 36px;
    --font-size-8: 48px;
    --font-size-9: 60px;
    --font-size-10: 72px;

    --line-height-0: 16px;
    --line-height-1: 20px;
    --line-height-2: 24px;
    --line-height-3: 28px;
    --line-height-4: 28px;
    --line-height-5: 32px;
    --line-height-6: 36px;
    --line-height-7: 40px;
    --line-height-8: 48px;
    --line-height-9: 60px;
    --line-height-10: 72px;
    --line-height-11: 96px;
    --line-height-12: 128px;

    /* Static colors - don't change with theme */
    --blue-600: #1e61cd;
    --magenta-100: #f9d7eb;

    --max-width-0: 320px;
    --max-width-1: 768px;
  }

  html {
    background-color: var(--background-color);
    font-family: var(--font-family-sans), var(--font-family-serif), sans-serif;
    text-size-adjust: 100%;
  }

  /* Unified color system inspired by Sanity schema */
  :root[data-theme="light"] {
    /* Primary colors */
    --primary-color: #1e61cd;
    --secondary-color: #6e7683;

    /* Background colors */
    --background-color: #ffffff;
    --surface-color: #ffffff; /* Used for cards, headers, etc. */

    /* Text colors */
    --text-primary: #101112;
    --text-secondary: #6e7683;
    --text-color: #101112;

    /* Border colors */
    --border-color: #ced2d9;

    color-scheme: light;
  }

  @media (prefers-color-scheme: dark), :root[data-theme="dark"] {
    :root {
      /* Primary colors */
      --primary-color: #4285f4;
      --secondary-color: #b0b0b0;

      /* Background colors */
      --background-color: #1a1a1a;
      --surface-color: #2a2a2a; /* Used for cards, headers, etc. */

      /* Text colors */
      --text-primary: #ffffff;
      --text-secondary: #b0b0b0;
      --text-color: #ffffff;

      /* Border colors */
      --border-color: #404040;

      color-scheme: dark;
    }
  }

  body {
    background-color: var(--background-color);
    color: var(--text-color);
  }
</style>
